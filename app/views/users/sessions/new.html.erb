<div class="mx-auto md:w-2/3 w-full">

  <h2 class="font-bold text-4xl">ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html:{class: "contents"}) do |f| %>

    <div class="my-5">
      <%= f.label :email %><br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "frm_ln" %>
    </div>

    <div class="my-5">
      <%= f.label :password %><br>
      <%= f.password_field :password, autocomplete: "current-password", class: "frm_ln" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="my-5">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="inline">
      <%= f.submit "ログイン", class: "frm_btn bg-blue-600" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>